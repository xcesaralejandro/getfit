<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        style="@style/container_cardview_tabbed">
        <LinearLayout style="@style/linear_v">
            <TextView
                style="@style/label_title"
                android:text="@string/label_mis_requisitos_nutricionales"
                android:textAlignment="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_weight="0"
                />
            <ScrollView style="@style/container_scroll">
                <LinearLayout style="@style/container">
                    <LinearLayout style="@style/linear_h"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            style="@style/linear_v"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gradient_2_pastel_horizontal"
                            android:layout_width="0dp">
                            <LinearLayout
                                style="@style/linear_h">
                                <LinearLayout
                                    style="@style/linear_v"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_weight="1">
                                    <TextView
                                        style="@style/label_title_white"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/label_mi_consumo_diario_de_liquidos"/>
                                    <LinearLayout
                                        style="@style/linear_h"
                                        android:gravity="center">
                                        <TextView
                                            android:id="@+id/txt_water"
                                            style="@style/number_wrap_white_bold"
                                            android:text="0"/>
                                        <TextView
                                            style="@style/label_medition"
                                            android:layout_gravity="bottom"
                                            android:text="@string/litros"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3.5"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_water"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout style="@style/linear_h"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            style="@style/linear_v"
                            android:layout_weight="1"
                            android:background="@drawable/bg_gradient_3_pastel"
                            android:layout_width="0dp">
                            <LinearLayout
                                style="@style/linear_h">
                                <LinearLayout
                                    style="@style/linear_v"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_weight="1">
                                    <TextView
                                        style="@style/label_title_white"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="@string/label_mi_consumo_cal_rico_diario"/>
                                    <LinearLayout
                                        style="@style/linear_h"
                                        android:gravity="center">
                                        <TextView
                                            android:id="@+id/txt_kcal"
                                            style="@style/number_wrap_white_bold"
                                            android:text="0"/>
                                        <TextView
                                            style="@style/label_medition"
                                            android:layout_gravity="bottom"
                                            android:text="Kcal"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3.5"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_food"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/label_title"
                        android:text="@string/label_distribuci_n_de_mi_consumo_cal_rico"/>
                    <LinearLayout
                        style="@style/table_row">
                        <TextView
                            style="@style/table_bold"
                            android:layout_weight="1"
                            android:text="@string/label_macronutriente"/>
                        <TextView
                            style="@style/table_bold"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="@string/label_gramos"/>
                        <TextView
                            style="@style/table_bold"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="@string/label_kcal"/>
                    </LinearLayout>

                    <View style="@style/separator_accent" />

                    <LinearLayout style="@style/table_row">
                        <LinearLayout style="@style/linear_h"
                            android:layout_weight="1">
                            <TextView
                                style="@style/table_caption_bold"
                                android:layout_weight="3"
                                android:text="@string/label_lip"/>
                            <TextView
                                style="@style/table_content"
                                android:layout_weight="1"
                                android:text="@string/label_l_pidos"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_lipido_g"
                            style="@style/table_content"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="0"/>
                        <TextView
                            android:id="@+id/txt_lipido_kcal"
                            style="@style/table_content"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="0"/>
                    </LinearLayout>

                    <LinearLayout style="@style/table_middle_row">
                        <LinearLayout style="@style/linear_h"
                            android:layout_weight="1">
                            <TextView
                                style="@style/table_caption_bold"
                                android:layout_weight="3"
                                android:text="@string/label_prot"/>
                            <TextView
                                style="@style/table_content"
                                android:layout_weight="1"
                                android:text="@string/label_proteinas"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txt_proteina_g"
                            style="@style/table_content"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="0"/>
                        <TextView
                            android:id="@+id/txt_proteina_kcal"
                            style="@style/table_content"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="0"/>
                    </LinearLayout>

                    <LinearLayout style="@style/table_row">
                        <LinearLayout style="@style/linear_h"
                            android:layout_weight="1">
                            <TextView
                                style="@style/table_caption_bold"
                                android:layout_weight="3"
                                android:text="@string/label_cho"/>
                            <TextView
                                style="@style/table_content"
                                android:layout_weight="1"
                                android:text="@string/labelcarbohidratos"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txt_carbohidratos_g"
                            style="@style/table_content"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="0"/>
                        <TextView
                            android:id="@+id/txt_carbohidratos_kcal"
                            style="@style/table_content"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="0"/>
                    </LinearLayout>
                    <View style="@style/separator_accent" />
                    <LinearLayout
                        style="@style/table_row">
                        <TextView
                            style="@style/table_bold"
                            android:layout_weight="1"
                            android:text="@string/label_t_diario"/>
                        <TextView
                            android:id="@+id/txt_total_g"
                            style="@style/table_caption_bold"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="150"/>
                        <TextView
                            android:id="@+id/txt_total_kcal"
                            style="@style/table_caption_bold"
                            android:textAlignment="center"
                            android:layout_weight="1.5"
                            android:text="2500"/>
                    </LinearLayout>

                    <TextView
                        style="@style/label_title"
                        android:text="@string/label_resumen_de_los_macronutrientes"
                        android:layout_marginTop="20dp"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart_macronutriente"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>